[flake8]
# PEP 8 configuration for flake8

# Maximum line length
max-line-length = 88

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info

# Ignore specific rules
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by max-line-length)
    E501

# Maximum complexity
max-complexity = 10

# Show source code for each error
show-source = True

# Show PEP 8 text for each error
show-pep8 = True

# Count errors
count = True

# Display statistics
statistics = True
